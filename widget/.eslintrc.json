{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": ["warn", "single"],
        "indent": ["warn", "tab", { "ignoreComments": true }],
        "no-tabs": 0,
        "padded-blocks": 0,
        "semi": ["warn", "never"],
        "no-trailing-spaces": 0,
        "spaced-comment": 0,
        "no-multiple-empty-lines": 0,
        "space-before-function-paren": 0,
        "camelcase": 0,
        "prefer-const": "warn",
        "space-infix-ops": "warn",
        "no-case-declarations": 0
    }
    // "settings": {
    //     "import/resolver": {
    //       "node": {
    //         "extensions": [".js", ".jsx", ".ts", ".tsx"]
    //       }
    //     }
    //   }

}